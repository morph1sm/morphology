<Window x:Class="Morphology.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ribbon="clr-namespace:System.Windows.Controls.Ribbon;assembly=System.Windows.Controls.Ribbon"
        xmlns:local="clr-namespace:Morphology"
        xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
        xmlns:data="clr-namespace:Morphology.Data"
        mc:Ignorable="d"
        Title="Morphology" Height="800" Width="1200" Name="_mainWindow">

    <Window.Resources>
        <CollectionViewSource x:Key="sortedRegions" Source="{Binding}">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="Name" Direction="Ascending"/>
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
    </Window.Resources>

    <DockPanel>
        <ribbon:Ribbon DockPanel.Dock="Top" Height="Auto">
            <Ribbon.ApplicationMenu>
                <RibbonApplicationMenu Visibility="Collapsed">
                </RibbonApplicationMenu>
            </Ribbon.ApplicationMenu>
            <RibbonTab Header="Home" KeyTip="H" >
                <RibbonGroup x:Name="groupMorphFolder" Header="Morph Folder" Width="100">
                    <RibbonButton 
                    x:Name="OpenFolder" 
                    Label="Open" 
                    Click="OnOpenFolder"
                    SmallImageSource="Icons/Folder_16x.png"/>
                    <RibbonButton 
                    x:Name="RefreshButton"
                    Click="OnRefresh"
                    Label="Refresh" 
                    SmallImageSource="Icons/Refresh_16x.png"/>
                </RibbonGroup>
                <RibbonGroup x:Name="rbnGr2" Header="View Options">
                    <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight">
                        <CheckBox 
                            DataContext="this" 
                            VerticalAlignment="Center" 
                            IsChecked="{Binding ElementName=_mainWindow,Path=CurrentSettingHandler.LoadedSettings.ShowStandardMorphs,Mode=TwoWay}"/>
                        <Label>Standard Morphs</Label>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight">
                        <CheckBox 
                            DataContext="this" 
                            VerticalAlignment="Center" 
                            IsChecked="{Binding ElementName=_mainWindow,Path=CurrentSettingHandler.LoadedSettings.ShowCustomMorphs,Mode=TwoWay}"/>
                        <Label>Custom Morphs</Label>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight">
                        <CheckBox 
                            DataContext="this" 
                            VerticalAlignment="Center" 
                            IsChecked="{Binding ElementName=_mainWindow,Path=CurrentSettingHandler.LoadedSettings.ShowAutoMorphs,Mode=TwoWay}"/>
                        <Label>Auto Morphs</Label>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight">
                        <CheckBox 
                            DataContext="this" 
                            VerticalAlignment="Center" 
                            IsChecked="{Binding ElementName=_mainWindow,Path=CurrentSettingHandler.LoadedSettings.ShowBadMorphs,Mode=TwoWay}"/>
                        <Label>Bad Morphs</Label>
                    </StackPanel>
                </RibbonGroup>
                <RibbonGroup x:Name="groupRegion" Header="Quick Fixes">
                    <RibbonButton 
                    x:Name="DeleteDSFButton"
                    Click="OnDeleteDSF"
                    Label="Delete All DSF Files" 
                    SmallImageSource="Icons/DeleteUser_16x.png"/>
                    <RibbonButton 
                    x:Name="DeleteAutoButton"
                    Click="OnDeleteAUTO"
                    Label="Delete All AUTO Morphs" 
                    SmallImageSource="Icons/DeleteFolder_16x.png"/>
                    <RibbonButton 
                    x:Name="AutoRegionButton"
                    Click="OnAutoRegion"
                    Label="Move Auto Morphs to AUTO Region" 
                    SmallImageSource="Icons/MoveField_16x.png"/>
                </RibbonGroup>
                
            </RibbonTab>
        </ribbon:Ribbon>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid VerticalAlignment="Bottom">
                <Label Margin="10, 0" Content="Installed Regions"/>
            </Grid>

            <Grid Grid.Column="1" VerticalAlignment="Bottom">
                <Label Margin="10, 0" Content="{Binding ElementName=regionsListBox, Path=SelectedItem.Name}"/>
            </Grid>

            <Grid Grid.Row="1">
                <ListBox 
                Name="regionsListBox"
                ScrollViewer.VerticalScrollBarVisibility="Visible"
                ItemsSource="{Binding Source={StaticResource sortedRegions}}"
                IsSynchronizedWithCurrentItem="True"
                Margin="10">

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="6"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid 
                            AllowDrop="True" 
                            Drop="Region_Drop"
                            DragEnter="Region_DragEnter"
                            DragLeave="Region_DragLeave">
                                
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="10"/>
                                </Grid.RowDefinitions>
                                <Grid 
                                Grid.RowSpan="2" 
                                Margin="0,0,10,0" 
                                Background="{Binding DisplayColor}" 
                                Width="10" 
                                Height="50" 
                                HorizontalAlignment="Left" />
                                <TextBlock Name="Region" Grid.Column="1" FontSize="16" VerticalAlignment="Center" Text="{Binding Name}"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Info}"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>

            <Grid Grid.Row="1" Grid.Column="1">
                <ListBox 
                Margin="10" 
                Name="MorphList"
                SelectionMode="Extended"
                IsSynchronizedWithCurrentItem="True"
                PreviewMouseDown="ListBox_PreviewMouseDown"
                PreviewMouseUp="ListBox_PreviewMouseUp"
                PreviewMouseMove="ListBox_PreviewMouseMove"
                LostMouseCapture="ListBox_LostMouseCapture"
                GiveFeedback="ListBox_GiveFeedback"
                ItemsSource="{Binding ElementName=regionsListBox, Path=SelectedItem.Morphs}">

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="6"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Height="50">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="20" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Grid 
                                Grid.RowSpan="2" 
                                Margin="0,0,10,0" 
                                Background="{Binding DisplayColor}" 
                                Width="10" 
                                Height="50" 
                                HorizontalAlignment="Left" />

                                <TextBlock Grid.Column="1" FontSize="16" Margin="10, 0" VerticalAlignment="Center" Text="{Binding DisplayName}"/>
                                <TextBlock Grid.Column="1" Grid.Row="1"  Margin="10, 0" Text="{Binding ID, StringFormat='ID {0}'}"/>
                                <TextBlock Grid.Column="2" Grid.Row="1" Margin="10, 0" HorizontalAlignment="Left" Text="{Binding Filepath}"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Grid>
    </DockPanel>
</Window>